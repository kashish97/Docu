<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteTextColor"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Your Certifications"
        android:textAlignment="center"
        android:textColor="@color/col1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.543"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ed1"
        android:layout_width="289dp"
        android:layout_height="61dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/values_3"
        android:drawableBottom="@drawable/ic_file_upload_black_24dp"
        android:fontFamily="@font/montserrat"
        android:paddingTop="5sp"
        android:text="Click here to upload your Certification"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/editText"
        android:layout_width="289dp"
        android:layout_height="67dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/values_3"
        android:drawableBottom="@drawable/ic_file_upload_black_24dp"
        android:fontFamily="@font/montserrat"
        android:text="Click here to upload your Guild Card"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ed1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed1"
        app:layout_constraintTop_toBottomOf="@+id/ed1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="273dp"
        android:layout_height="56dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/values_2"
        android:fontFamily="@font/montserrat"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/whiteTextColor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


</androidx.constraintlayout.widget.ConstraintLayout>
